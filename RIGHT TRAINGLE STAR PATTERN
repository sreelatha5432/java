import java.util.*;
public class Main
{
    public static void main (String[] args)
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("enter a value:");
        int i,j;
        int row=sc.nextInt();
        for(i=1;i<=row;i++)
        {
            for(j=1;j<=i;j++)
            {
                System.out.print("*");
            }
            System.out.println(" ");
        }
    }
}
